@model TodoApplication.Models.TodoItem

@{
    ViewBag.Title = "Edit Todo";
}

<h2>Edit Todo</h2>

@using (Html.BeginForm("Edit", "Todo", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)
    
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.IsDone, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.IsDone, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Title, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new {@class = "form-control"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Description, new {@class = "form-control", row = 4})
        </div>
    </div>

    <div class="form-group">
        <a asp-action="Edit" href="@Url.Action("AddNotifier", "Todo", new { id = Model.Id })">Add Notifier</a>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Edit Todo" />
        </div>
    </div>
}